                                        <argument>-t</argument>
                                        <argument>${registry}${rs}t9t-setup:${project.version}</argument>
                                        <argument>--target</argument>
                                        <argument>t9t-setup</argument>
                                        <argument>--build-arg</argument>
                                        <argument>REGISTRY=${registry}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JAVA_IMAGE=${java.image}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JAVA_TAG=${java.tag}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JPROFILER_VERSION=${jprofiler.version}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JMX_EXPORTER_VERSION=${jmx.exporter.version}</argument>
                                        <argument>.</argument>
                                    </arguments>
                                    <workingDirectory>${project.basedir}</workingDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-build-t9t-zkui</id>
                                <phase>install</phase>
                                <goals><goal>exec</goal></goals>
                                <configuration>
                                    <executable>docker</executable>
                                    <arguments>
                                        <argument>build</argument>
                                        <argument>-t</argument>
                                        <argument>${registry}${rs}t9t-zkui:${project.version}</argument>
                                        <argument>--target</argument>
                                        <argument>t9t-zkui</argument>
                                        <argument>--build-arg</argument>
                                        <argument>REGISTRY=${registry}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JAVA_IMAGE=${java.image}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JAVA_TAG=${java.tag}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JPROFILER_VERSION=${jprofiler.version}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JMX_EXPORTER_VERSION=${jmx.exporter.version}</argument>
                                        <argument>.</argument>
                                    </arguments>
                                    <workingDirectory>${project.basedir}</workingDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-build-t9t-gateway</id>
                                <phase>install</phase>
                                <goals><goal>exec</goal></goals>
                                <configuration>
                                    <executable>docker</executable>
                                    <arguments>
                                        <argument>build</argument>
                                        <argument>-t</argument>
                                        <argument>${registry}${rs}t9t-gateway:${project.version}</argument>
                                        <argument>--target</argument>
                                        <argument>t9t-gateway</argument>
                                        <argument>--build-arg</argument>
                                        <argument>REGISTRY=${registry}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JAVA_IMAGE=${java.image}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JAVA_TAG=${java.tag}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JPROFILER_VERSION=${jprofiler.version}</argument>
                                        <argument>--build-arg</argument>
                                        <argument>JMX_EXPORTER_VERSION=${jmx.exporter.version}</argument>
                                        <argument>.</argument>
                                    </arguments>
                                    <workingDirectory>${project.basedir}</workingDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-build-t9t-server</id>
                                <phase>install</phase>
                                <goals><goal>exec</goal></goals>
                                <configuration>
                                    <executable>docker</executable>
                                    <arguments>
                                        <argument>build</argument>
                                        <argument>-t</argument>
                                        <argument>${registry}${rs}t9t-server:${project.version}</argument>
                                        <argument>--target</argument>
                                        <argument>t9t-server</argument>
                                        <argument>--build-arg</argument>
