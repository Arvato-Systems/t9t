                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-push-t9t-ui</id>
                                <phase>install</phase>
                                <goals><goal>exec</goal></goals>
                                <configuration>
                                    <executable>docker</executable>
                                    <arguments>
                                        <argument>push</argument>
                                        <argument>${registry}${rs}t9t-ui:${project.version}</argument>
                                    </arguments>
                                    <workingDirectory>${project.basedir}</workingDirectory>
                                </configuration>
                            </execution>
                            <execution>
                                <id>docker-push-t9t-rest</id>
                                <phase>install</phase>
                                <goals><goal>exec</goal></goals>
                                <configuration>
                                    <executable>docker</executable>
                                    <arguments>
                                        <argument>push</argument>
                                        <argument>${registry}${rs}t9t-rest:${project.version}</argument>
                                    </arguments>
                                    <workingDirectory>${project.basedir}</workingDirectory>
