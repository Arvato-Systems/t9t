<?xml version="1.0" encoding="UTF-8"?>
<zk>
    <preference>
        <name>org.zkoss.zk.ui.WebApp.name</name>
        <value>t9t-zkui</value>
    </preference>

    <library-property>
        <name>org.zkoss.theme.preferred</name>
        <value>silvertail</value>
    </library-property>

    <library-property>
        <name>org.zkoss.zul.Button.mold</name>
        <value>trendy</value>
    </library-property>

    <library-property>
        <name>org.zkoss.zul.css.flex</name>
        <value>false</value>
    </library-property>

    <library-property>
        <name>org.zkoss.zul.borderlayout.animation.disabled</name>
        <value>true</value>
    </library-property>

    <library-property>
        <name>org.zkoss.zul.grid.rod</name>
        <value>false</value>
    </library-property>

    <library-property>
        <name>org.zkoss.zul.listbox.rod</name>
        <value>false</value>
    </library-property>

    <library-property>
        <name>org.zkoss.bind.appConverters</name>
        <value>
            enumAlpha=com.arvatosystems.t9t.zkui.converters.EnumAlphaConverter,
            fixedpoint=com.arvatosystems.t9t.zkui.converters.FixedPointToStringConverter,
            nanos=com.arvatosystems.t9t.zkui.converters.NanoUnitsConverter,
            millis=com.arvatosystems.t9t.zkui.converters.MilliUnitsConverter,
            micros=com.arvatosystems.t9t.zkui.converters.MicroUnitsConverter,
            day=com.arvatosystems.t9t.zkui.converters.LocalDateConverter,
            time=com.arvatosystems.t9t.zkui.converters.LocalTimeConverter,
            timestamp=com.arvatosystems.t9t.zkui.converters.LocalDateTimeConverter,
            instant=com.arvatosystems.t9t.zkui.converters.InstantConverter,
            uuid=com.arvatosystems.t9t.zkui.converters.UUIDConverter,
            json=com.arvatosystems.t9t.zkui.converters.JsonConverter
        </value>
    </library-property>

    <language-config>
        <addon-uri>/WEB-INF/t9t-lang-addon.xml</addon-uri>
    </language-config>

    <system-config>
        <label-location>/WEB-INF/resources/translations/t9t-zkui.properties</label-location>
        <label-location>/WEB-INF/resources/t9t-zkui-configuration.properties</label-location>
    </system-config>

    <session-config>
        <session-timeout>3600</session-timeout>
        <timeout-uri>/timeout.zul</timeout-uri>
    </session-config>

    <error-page>
        <exception-type>java.lang.Throwable</exception-type>
        <location>/screens/common/error.zul</location>
    </error-page>

    <listener>
        <listener-class>com.arvatosystems.t9t.zkui.init.SessionListener</listener-class>
    </listener>
</zk>
